<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
              android:orientation="vertical"
             tools:context="com.optimism.tenapp.fragment.PersonFragment">


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.6"
        android:background="#F3604C"
        android:gravity="center"
        >
        <ImageView
            android:id="@+id/login"
            android:layout_width="62dp"
            android:layout_height="62dp"
            android:src="@mipmap/avator_login"
            android:layout_gravity="center"

            />

        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@mipmap/avator_whiteline"
            android:layout_gravity="center"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="点击用QQ登录"
            android:textSize="12sp"
            android:textColor="#FFF"
            android:layout_gravity="center_horizontal"
            android:paddingTop="110dp"
            />

    </FrameLayout>

    <LinearLayout

        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.5"
        >
        <Button
            android:id="@+id/shoucang"
            android:paddingLeft="10dp"
            android:drawableLeft="@mipmap/setting_favorite"
            android:drawableRight="@mipmap/setting_arrow"
            android:gravity="left|center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffffff"
            android:text="  我的收藏"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="10dp"
            android:background="#EDEDED"/>
        <Button
            android:id="@+id/ziti"
            android:paddingLeft="10dp"
            android:drawableLeft="@mipmap/setting_font"
            android:drawableRight="@mipmap/setting_arrow"
            android:gravity="left|center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFF"
            android:text="  字体设置"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="10dp"
            android:background="#EDEDED"/>
        <Button
            android:id="@+id/guanyu"
            android:paddingLeft="10dp"
            android:drawableLeft="@mipmap/setting_aboutus"
            android:drawableRight="@mipmap/setting_arrow"
            android:gravity="left|center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFF"
            android:text="  关于十个"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="10dp"
            android:background="#EDEDED"/>
        <Button
            android:id="@+id/yijian"
            android:paddingLeft="10dp"
            android:drawableLeft="@mipmap/setting_feedback"
            android:drawableRight="@mipmap/setting_arrow"
            android:gravity="left|center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFF"
            android:text="  意见反馈"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="10dp"
            android:background="#EDEDED"/>


        </LinearLayout>






</LinearLayout>
