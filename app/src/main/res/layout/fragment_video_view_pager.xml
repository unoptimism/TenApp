<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context="com.optimism.tenapp.viewpager.VideoViewPagerFragment">

    <FrameLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="50dp"
            >
            <ImageView
                android:adjustViewBounds="true"
                android:scaleType="fitXY"
                android:id="@+id/video_iv1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />

            <TextView
                android:id="@+id/vido_title"
                android:textColor="#000000"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/vido_author"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:textSize="10dp"
                android:textColor="#5B5E5F"
                />

            <TextView
                android:background="#CFCFCF"
                android:padding="20dp"
                android:id="@+id/video_text1"

                android:layout_margin="20dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                />
            <TextView
                android:textColor="#000000"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <ImageView
                android:adjustViewBounds="true"
                android:scaleType="fitXY"
                android:id="@+id/video_iv2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />

            <TextView
                android:id="@+id/video_text2"
                android:textColor="#000000"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <ImageView

                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:src="@mipmap/line"
                />
            <TextView
                android:id="@+id/video_realtitle"
                android:textColor="#000000"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <ImageView
                android:adjustViewBounds="true"
                android:scaleType="fitXY"
                android:id="@+id/video_iv3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />

            <TextView
                android:id="@+id/video_text3"
                android:textColor="#000000"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/video_text4"
                android:textColor="#000000"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/video_text5"
                android:textColor="#000000"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <ImageView
                android:adjustViewBounds="true"
                android:scaleType="fitXY"
                android:id="@+id/video_iv4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />
            <ImageView
                android:adjustViewBounds="true"
                android:scaleType="fitXY"
                android:id="@+id/video_iv5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />
            <ImageView

                android:layout_width="match_parent"
                android:layout_height="30dp"
                />


            <TextView
                android:id="@+id/video_author2"
                android:textColor="#000000"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/video_authorbrief"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="10dp"
                android:textColor="#5B5E5F"
                />

        </LinearLayout>

        <ImageView
            android:layout_gravity="center"
            android:id="@+id/iv_zhuanquan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/zhuanquan"
            />
    </FrameLayout>






</ScrollView>
